{
    "name": "gabriel-web",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "bun run format && bun run lint && next build",
        "start": "next start",
        "format": "biome format --write --no-errors-on-unmatched",
        "lint": "biome lint --write --no-errors-on-unmatched",
        "prepare": "husky"
    },
    "dependencies": {
        "@ai-sdk/react": "^1.2.9",
        "@hookform/resolvers": "^5.0.1",
        "@radix-ui/react-dialog": "^1.1.7",
        "@radix-ui/react-label": "^2.1.3",
        "@radix-ui/react-scroll-area": "^1.2.4",
        "@radix-ui/react-select": "^2.1.7",
        "@radix-ui/react-slot": "^1.2.0",
        "@radix-ui/react-tabs": "^1.1.4",
        "@radix-ui/react-tooltip": "^1.2.0",
        "@tanstack/react-query": "^5.74.3",
        "ai": "^4.3.10",
        "axios": "^1.8.4",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "dayjs": "^1.11.13",
        "lucide-react": "^0.487.0",
        "marked": "^15.0.11",
        "motion": "^11.15.0",
        "nanoid": "^5.1.5",
        "next": "15.2.6",
        "next-themes": "^0.4.6",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "react-hook-form": "^7.55.0",
        "react-markdown": "^10.1.0",
        "remark-gfm": "^4.0.1",
        "sonner": "^2.0.3",
        "tailwind-merge": "^3.2.0",
        "tailwind-variants": "^1.0.0",
        "tw-animate-css": "^1.2.5",
        "zod": "^3.24.2",
        "zustand": "^5.0.3"
    },
    "devDependencies": {
        "@biomejs/biome": "1.9.4",
        "@eslint/eslintrc": "^3",
        "@tailwindcss/postcss": "^4",
        "@types/node": "^20",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "eslint": "^9",
        "eslint-config-next": "15.2.4",
        "husky": "^9.1.7",
        "lint-staged": "^15.5.0",
        "tailwindcss": "^4",
        "typescript": "^5"
    },
    "lint-staged": {
        "*.{js,ts,jsx,tsx,json,jsonc}": [
            "biome check --fix --unsafe ./src",
            "biome check --files-ignore-unknown=true ./src",
            "biome check --write --no-errors-on-unmatched ./src",
            "biome check --write --organize-imports-enabled=false --no-errors-on-unmatched ./src",
            "biome check --write --unsafe --no-errors-on-unmatched ./src",
            "biome format --write --no-errors-on-unmatched ./src",
            "biome lint --write --no-errors-on-unmatched ./src"
        ]
    }
}
